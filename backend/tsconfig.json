{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ESNext", "dom"],
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
